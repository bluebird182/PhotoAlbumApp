<div class="container mt-5">
    <div class="card custom-card">
        <div class="card-header custom-card-header">
            <h5 class="mb-0">Fénykép feltöltése</h5>
        </div>
        <div class="card-body">
            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Kép neve:</label>
                    <input type="text" class="form-control custom-input" id="name" name="name" placeholder="max. 40 karakter" required maxlength="40" />
                </div>

                <div class="mb-3">
                    <label for="file" class="form-label">Kép kiválasztása:</label>
                    <input type="file" class="form-control custom-input" id="file" name="file" accept="image/*" required />
                </div>

                <button type="submit" class="btn custom-btn">Feltöltés</button>
            </form>
        </div>
    </div>
</div>
